<div class="panel panel-primary">
  <div class="panel-heading">
    <h1><%= @artist.name %></h1>
    <div id="artist-id"><%=@artist.id%></div>
  </div>

  <div class="panel-body">
    <%= link_to "Delete artist", artist_path(@artist), method: :delete, class: "btn btn-primary", data: { confirm: "Are you sure?" } %><br>

    <h3>Songs</h3>
    <div id="song-list" class="panel-body">
      <% @artist.songs.each do |song| %>
        <div class="song">
          <%= song.track_number %>. <%= song.name%> (<%= song.duration%>)
          <a class="delete-song" href="#" data-id="<%= song.id %>">[Delete]</a>
          <br>
        </div>
      <% end %>
    </div>
    <a class="btn btn-primary delete-all" href="#">Delete all songs</a>

    <h3>Create song</h3>

    <div class="panel-body">
      <%= render 'songs/form' %>
    </div>
  </div>
</div>
